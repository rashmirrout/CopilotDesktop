<Application x:Class="CopilotAgent.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:CopilotAgent.App.Converters"
             xmlns:mdxaml="clr-namespace:MdXaml;assembly=MdXaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <!-- GLOBAL TEXTBLOCK STYLE WITH COLOR EMOJI SUPPORT                          -->
            <!-- Note: Segoe UI Emoji font is required for color emoji rendering in WPF   -->
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            
            <!-- Global TextBlock style for emoji support -->
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI Emoji, Segoe UI, Segoe UI Symbol"/>
            </Style>
            
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <!-- COLOR PALETTE - MODERN MATERIAL DESIGN INSPIRED                          -->
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            
            <!-- Primary Colors -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1976D2"/>
            <SolidColorBrush x:Key="PrimaryLightBrush" Color="#64B5F6"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#00BCD4"/>
            
            <!-- Background Colors -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
            <SolidColorBrush x:Key="CodeBackgroundBrush" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="CodeBlockBackgroundBrush" Color="#263238"/>
            
            <!-- Text Colors -->
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
            <SolidColorBrush x:Key="TextOnDarkBrush" Color="#ECEFF1"/>
            
            <!-- Syntax Highlighting Colors -->
            <SolidColorBrush x:Key="LinkBrush" Color="#1565C0"/>
            <SolidColorBrush x:Key="LinkHoverBrush" Color="#0D47A1"/>
            <SolidColorBrush x:Key="CodeTextBrush" Color="#C62828"/>
            <SolidColorBrush x:Key="BlockquoteBorderBrush" Color="#64B5F6"/>
            <SolidColorBrush x:Key="BlockquoteBackgroundBrush" Color="#E3F2FD"/>
            <SolidColorBrush x:Key="HeaderBrush" Color="#1976D2"/>
            <SolidColorBrush x:Key="BoldBrush" Color="#37474F"/>
            <SolidColorBrush x:Key="ItalicBrush" Color="#546E7A"/>
            
            <!-- Status Colors -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
            <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
            
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <!-- ICON BUTTON STYLE - COMPACT CIRCULAR/ROUNDED ICON BUTTONS                -->
            <!-- Usage: Style="{StaticResource IconButtonStyle}" on any Button              -->
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#616161"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Width" Value="32"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="IconBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}"
                                    ToolTip="{TemplateBinding ToolTip}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="IconBorder" Property="Background" Value="#E0E0E0"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="IconBorder" Property="Background" Value="#BDBDBD"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Primary accent variant of IconButtonStyle (filled background) -->
            <Style x:Key="PrimaryIconButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="IconBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}"
                                    ToolTip="{TemplateBinding ToolTip}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="IconBorder" Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="IconBorder" Property="Background" Value="#1565C0"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <!-- MARKDOWN SCROLL VIEWER STYLE                                             -->
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <Style TargetType="{x:Type mdxaml:MarkdownScrollViewer}">
                <Setter Property="Foreground" Value="#212121"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FontFamily" Value="Segoe UI Emoji, Segoe UI, Segoe UI Symbol"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>