<Window x:Class="CopilotAgent.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CopilotAgent.App.Views"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        mc:Ignorable="d"
        Title="Copilot Agent Desktop" 
        Height="800" 
        Width="1200"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        TextElement.FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">
    
    <Window.Resources>
        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4,4,0,0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#1976D2"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tab Bar -->
        <Border Grid.Row="0" 
                Background="#EEEEEE" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Session Tabs -->
                <ScrollViewer Grid.Column="0" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled"
                              Padding="8,4,8,0">
                    <ItemsControl ItemsSource="{Binding Sessions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource TabButtonStyle}"
                                        Command="{Binding DataContext.SwitchSessionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayName}" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"
                                                   ToolTip="Double-click to rename"
                                                   MouseLeftButtonDown="TabName_MouseLeftButtonDown"/>
                                        
                                        <Button Grid.Column="1"
                                                Content="Ã—" 
                                                FontSize="18"
                                                Width="20"
                                                Height="20"
                                                Padding="0"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#757575"
                                                Command="{Binding DataContext.CloseSessionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                VerticalAlignment="Center"
                                                Cursor="Hand"
                                                ToolTip="Close session"
                                                Click="CloseButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E0E0E0"/>
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="8,4">
                    <Button Content="+ New Session" 
                            Command="{Binding CreateSessionCommand}"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            Margin="0,0,4,0"
                            FontSize="12"
                            Cursor="Hand"
                            ToolTip="Create a new chat session">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding CreateWorktreeSessionCommand}"
                            Background="{StaticResource AccentBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            Margin="0,0,4,0"
                            FontSize="12"
                            Cursor="Hand"
                            ToolTip="Create session from GitHub issue">
                        <StackPanel Orientation="Horizontal">
                            <emoji:TextBlock Text="ðŸŒ¿" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="Worktree" Foreground="White"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#00ACC1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding ShowAgentTeamViewCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="10,6"
                            FontSize="12"
                            Cursor="Hand"
                            ToolTip="Agent Team (Multi-Agent Orchestration)">
                        <StackPanel Orientation="Horizontal">
                            <emoji:TextBlock Text="ðŸ¤–" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock Text="Team" VerticalAlignment="Center" Foreground="#424242"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding ShowSettingsCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="10,6"
                            FontSize="14"
                            Cursor="Hand"
                            ToolTip="Settings">
                        <emoji:TextBlock Text="âš™ï¸" FontSize="14"/>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Active Chat View (visible when not in Agent Team mode) -->
        <views:ChatView Grid.Row="1" 
                        DataContext="{Binding ActiveChatViewModel}">
            <views:ChatView.Style>
                <Style TargetType="views:ChatView">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DataContext.HasActiveSession, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding DataContext.ShowAgentTeam, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </views:ChatView.Style>
        </views:ChatView>

        <!-- Agent Team View (visible when ShowAgentTeam is true) -->
        <Grid Grid.Row="1">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowAgentTeam}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Back to Chat button -->
            <Border Grid.Row="0" Background="#E8EAF6" Padding="8,4"
                    BorderBrush="#C5CAE9" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <Button Content="â† Back to Chat" 
                            Command="{Binding ShowChatCommand}"
                            Background="Transparent" BorderThickness="0"
                            Foreground="#3F51B5" FontSize="12" Cursor="Hand"
                            Padding="8,4">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C5CAE9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="Multi-Agent Orchestration" 
                               FontSize="12" FontWeight="SemiBold"
                               Foreground="#3F51B5" VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
            <views:AgentTeamView Grid.Row="1" 
                                 DataContext="{Binding AgentTeamViewModel}"/>
        </Grid>

        <!-- No Session Placeholder -->
        <Border Grid.Row="1" 
                Background="White">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasActiveSession}" Value="False">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <emoji:TextBlock Text="ðŸ‘‹" 
                           FontSize="64" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
                <TextBlock Text="Welcome to Copilot Agent Desktop" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           Foreground="#212121"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Create a new session to get started" 
                           FontSize="14" 
                           Foreground="#757575"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"/>
                <Button Content="Create New Session" 
                        Command="{Binding CreateSessionCommand}"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
