<UserControl x:Class="CopilotAgent.App.Views.McpConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CopilotAgent.App.ViewModels"
             xmlns:converters="clr-namespace:CopilotAgent.App.Converters"
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="800"
             Background="#F8F9FA">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
        <converters:ZeroCountToVisibilityConverter x:Key="ZeroCountToVis"/>
        <converters:NonZeroCountToVisibilityConverter x:Key="NonZeroCountToVis"/>
        
        <!-- Compact Card Style - Light Theme -->
        <Style x:Key="ServerCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9FAFB"/>
                    <Setter Property="BorderBrush" Value="#D1D5DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Tool Card Style - Nested -->
        <Style x:Key="ToolCard" TargetType="Border">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitch" TargetType="ToggleButton">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="track" 
                                    Background="#D1D5DB" 
                                    CornerRadius="10"
                                    BorderThickness="0"/>
                            <Border x:Name="thumb" 
                                    Width="16" Height="16" 
                                    CornerRadius="8"
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.2"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#10B981"/>
                                <Setter TargetName="thumb" Property="Margin" Value="18,0,0,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="track" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Expand Arrow Style -->
        <Style x:Key="ExpandArrow" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent" Padding="4">
                            <TextBlock x:Name="Arrow" Text="â–¶" FontSize="9" Foreground="#9CA3AF">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="0" CenterX="4" CenterY="5"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="90" CenterX="4" CenterY="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Arrow" Property="Foreground" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Panel Header Style -->
        <Style x:Key="PanelHeader" TargetType="Border">
            <Setter Property="Background" Value="#FAFBFC"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <emoji:TextBlock Text="ðŸ”Œ" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="MCP Servers" FontSize="16" FontWeight="SemiBold" Foreground="#111827" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding SessionStatusText}" FontSize="11" Foreground="#6B7280" Margin="24,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Live Session Indicator -->
                    <Border Background="#DCFCE7" 
                            CornerRadius="4" 
                            Padding="8,4" 
                            Margin="0,0,12,0"
                            Visibility="{Binding HasActiveSession, Converter={StaticResource BoolToVis}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="LIVE SESSION" 
                                       FontSize="10" 
                                       FontWeight="Bold" 
                                       Foreground="#16A34A" 
                                       VerticalAlignment="Center"/>
                            <Ellipse Width="8" Height="8" 
                                     Fill="#22C55E" 
                                     Margin="6,0,0,0" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Button ToolTip="Refresh servers"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource IconButton}">
                        <emoji:TextBlock Text="ðŸ”„" FontSize="13"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Config File Path Bar -->
        <Border Grid.Row="1" Background="#FAFBFC" Padding="12,6" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="11" 
                           VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding McpConfigFilePath}" 
                           FontSize="10" 
                           Foreground="#9CA3AF"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"
                           ToolTip="{Binding McpConfigFilePath}"/>
                <Button Grid.Column="2"
                        Content="Open"
                        Command="{Binding OpenConfigFileCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="8,3"
                        FontSize="10"
                        ToolTip="Open config file in default editor"
                        Margin="8,0,0,0"/>
                <Button Grid.Column="3"
                        ToolTip="Open folder"
                        Command="{Binding OpenConfigFolderCommand}"
                        Style="{StaticResource IconButton}"
                        Padding="4"
                        Margin="4,0,0,0">
                    <TextBlock Text="ðŸ“" FontSize="11"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Main Content Area - Two Panel Layout -->
        <Grid Grid.Row="2">
            <!-- Loading indicator -->
            <Border Background="White" CornerRadius="8" Padding="30" Margin="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                    Panel.ZIndex="10">
                <StackPanel>
                    <emoji:TextBlock Text="â³" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock Text="Loading MCP servers..." FontSize="13" Foreground="#6B7280" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Applying indicator -->
            <Border Background="White" CornerRadius="8" Padding="30" Margin="12"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding IsApplying, Converter={StaticResource BoolToVis}}"
                    Panel.ZIndex="10">
                <StackPanel>
                    <emoji:TextBlock Text="ðŸ”„" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock Text="Applying changes and restarting session..." FontSize="13" Foreground="#D97706" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Two-Panel Split View -->
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVis}}"
                  Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                </Grid.ColumnDefinitions>
                
                <!-- LEFT PANEL: Configured Servers -->
                <Border Grid.Column="0" 
                        Background="White" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Panel Header -->
                        <Border Grid.Row="0" Style="{StaticResource PanelHeader}" CornerRadius="8,8,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#F3F4F6" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                        <TextBlock Text="âš™ï¸ CONFIG" FontSize="9" FontWeight="Bold" Foreground="#6B7280"/>
                                    </Border>
                                    <TextBlock Text="Configured Servers" FontSize="12" FontWeight="Medium" Foreground="#374151" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock FontSize="10" Foreground="#9CA3AF" Margin="0,4,0,0">
                                    <Run Text="{Binding ConfiguredServers.Count, Mode=OneWay}"/>
                                    <Run Text=" servers â€¢ Toggle to enable/disable"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <!-- Configured Servers List -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      Padding="8">
                            <StackPanel>
                                <!-- Configured Server Cards -->
                                <ItemsControl ItemsSource="{Binding ConfiguredServers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border>
                                                <Border.Style>
                                                    <Style TargetType="Border" BasedOn="{StaticResource ServerCard}">
                                                        <Style.Triggers>
                                                            <!-- Enabled - green left border -->
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding IsEnabled}" Value="True"/>
                                                                    <Condition Binding="{Binding PendingState}" Value="None"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="BorderBrush" Value="#10B981"/>
                                                                <Setter Property="BorderThickness" Value="3,1,1,1"/>
                                                            </MultiDataTrigger>
                                                            <!-- Pending - amber highlight -->
                                                            <DataTrigger Binding="{Binding PendingState}" Value="PendingEnable">
                                                                <Setter Property="Background" Value="#FFFBEB"/>
                                                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                                <Setter Property="BorderThickness" Value="3,1,1,1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding PendingState}" Value="PendingDisable">
                                                                <Setter Property="Background" Value="#FFFBEB"/>
                                                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                                <Setter Property="BorderThickness" Value="3,1,1,1"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Server Icon -->
                                                    <Border Grid.Column="0" 
                                                            Width="28" Height="28" 
                                                            CornerRadius="6"
                                                            Margin="0,0,10,0"
                                                            VerticalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#F3F4F6"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding PendingState}" Value="PendingEnable">
                                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding PendingState}" Value="PendingDisable">
                                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <emoji:TextBlock Text="ðŸ”Œ" 
                                                                   FontSize="13" 
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- Server Info -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Name}" 
                                                                   FontSize="12" 
                                                                   FontWeight="Medium" 
                                                                   Foreground="#111827"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock FontSize="10" Foreground="#6B7280" Margin="0,2,0,0"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   ToolTip="{Binding CommandDisplay}">
                                                            <Run Text="{Binding TransportDisplay, Mode=OneWay}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    
                                                    <!-- Status Badge -->
                                                    <Border Grid.Column="2" CornerRadius="3" Padding="6,2" VerticalAlignment="Center" Margin="0,0,8,0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#FEE2E2"/>
                                                                <Style.Triggers>
                                                                    <MultiDataTrigger>
                                                                        <MultiDataTrigger.Conditions>
                                                                            <Condition Binding="{Binding IsEnabled}" Value="True"/>
                                                                            <Condition Binding="{Binding PendingState}" Value="None"/>
                                                                        </MultiDataTrigger.Conditions>
                                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                                    </MultiDataTrigger>
                                                                    <DataTrigger Binding="{Binding PendingState}" Value="PendingEnable">
                                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding PendingState}" Value="PendingDisable">
                                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="9" FontWeight="Medium">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="#DC2626"/>
                                                                    <Setter Property="Text" Value="Off"/>
                                                                    <Style.Triggers>
                                                                        <MultiDataTrigger>
                                                                            <MultiDataTrigger.Conditions>
                                                                                <Condition Binding="{Binding IsEnabled}" Value="True"/>
                                                                                <Condition Binding="{Binding PendingState}" Value="None"/>
                                                                            </MultiDataTrigger.Conditions>
                                                                            <Setter Property="Foreground" Value="#059669"/>
                                                                            <Setter Property="Text" Value="On"/>
                                                                        </MultiDataTrigger>
                                                                        <DataTrigger Binding="{Binding PendingState}" Value="PendingEnable">
                                                                            <Setter Property="Foreground" Value="#D97706"/>
                                                                            <Setter Property="Text" Value="Pending"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding PendingState}" Value="PendingDisable">
                                                                            <Setter Property="Foreground" Value="#D97706"/>
                                                                            <Setter Property="Text" Value="Pending"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                    
                                                    <!-- Toggle Switch -->
                                                    <ToggleButton Grid.Column="3"
                                                                  Style="{StaticResource ToggleSwitch}"
                                                                  IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                                                  Command="{Binding DataContext.ToggleServerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                  CommandParameter="{Binding}"
                                                                  ToolTip="Toggle server"
                                                                  VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Empty State (no servers) -->
                                <Border Background="#F9FAFB" CornerRadius="6" Padding="20" Margin="0,10,0,0"
                                        Visibility="{Binding ConfiguredServers.Count, Converter={StaticResource ZeroCountToVis}}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <emoji:TextBlock Text="ðŸ“­" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="No servers configured" 
                                                   FontSize="12" 
                                                   FontWeight="Medium" 
                                                   Foreground="#6B7280" 
                                                   HorizontalAlignment="Center"/>
                                        <Button Content="Open Config" 
                                                Command="{Binding OpenConfigFileCommand}"
                                                Style="{StaticResource SecondaryButton}"
                                                Margin="0,8,0,0"
                                                HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- Divider -->
                <Rectangle Grid.Column="1" Width="1" Fill="#E5E7EB" Margin="3,20"/>
                
                <!-- RIGHT PANEL: Active/Running Servers -->
                <Border Grid.Column="2" 
                        Background="White" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Panel Header -->
                        <Border Grid.Row="0" Style="{StaticResource PanelHeader}" CornerRadius="8,8,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasActiveSession}" Value="True">
                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Margin="0,0,4,0" VerticalAlignment="Center">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#9CA3AF"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasActiveSession}" Value="True">
                                                                <Setter Property="Fill" Value="#10B981"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock FontSize="9" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#6B7280"/>
                                                        <Setter Property="Text" Value="INACTIVE"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasActiveSession}" Value="True">
                                                                <Setter Property="Foreground" Value="#059669"/>
                                                                <Setter Property="Text" Value="LIVE"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="Active Servers" FontSize="12" FontWeight="Medium" Foreground="#374151" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock FontSize="10" Margin="0,4,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#9CA3AF"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasActiveSession}" Value="True">
                                                    <Setter Property="Foreground" Value="#059669"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <Run Text="{Binding LiveServers.Count, Mode=OneWay}"/>
                                    <Run Text=" running servers"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <!-- Active Servers List -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      Padding="8">
                            <StackPanel>
                                <!-- No Active Session Message -->
                                <Border Background="#F9FAFB" CornerRadius="6" Padding="20" Margin="0,10,0,0"
                                        Visibility="{Binding HasActiveSession, Converter={StaticResource InverseBoolToVis}}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <emoji:TextBlock Text="ðŸ’¤" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="No active session" 
                                                   FontSize="12" 
                                                   FontWeight="Medium" 
                                                   Foreground="#6B7280" 
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Start a session to see running servers" 
                                                   FontSize="10" 
                                                   Foreground="#9CA3AF" 
                                                   HorizontalAlignment="Center"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Live Server Cards -->
                                <ItemsControl ItemsSource="{Binding LiveServers}"
                                              Visibility="{Binding HasActiveSession, Converter={StaticResource BoolToVis}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,0,6">
                                                <Border.Style>
                                                    <Style TargetType="Border" BasedOn="{StaticResource ServerCard}">
                                                        <Style.Triggers>
                                                            <!-- Running - green left border -->
                                                            <DataTrigger Binding="{Binding Status}" Value="running">
                                                                <Setter Property="BorderBrush" Value="#10B981"/>
                                                                <Setter Property="BorderThickness" Value="3,1,1,1"/>
                                                            </DataTrigger>
                                                            <!-- Error - red left border -->
                                                            <DataTrigger Binding="{Binding Status}" Value="error">
                                                                <Setter Property="BorderBrush" Value="#DC2626"/>
                                                                <Setter Property="BorderThickness" Value="3,1,1,1"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                
                                                <StackPanel>
                                                    <!-- Server Header Row -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- Expand Arrow -->
                                                        <ToggleButton Grid.Column="0" 
                                                                      Style="{StaticResource ExpandArrow}"
                                                                      IsChecked="{Binding IsExpanded}"
                                                                      Margin="0,0,4,0"
                                                                      VerticalAlignment="Center"/>
                                                        
                                                        <!-- Server Icon -->
                                                        <Border Grid.Column="1" 
                                                                Width="28" Height="28" 
                                                                CornerRadius="6"
                                                                Margin="0,0,10,0"
                                                                VerticalAlignment="Center">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="#DBEAFE"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="running">
                                                                            <Setter Property="Background" Value="#D1FAE5"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="error">
                                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <emoji:TextBlock Text="ðŸ”Œ" 
                                                                       FontSize="13" 
                                                                       HorizontalAlignment="Center" 
                                                                       VerticalAlignment="Center"/>
                                                        </Border>
                                                        
                                                        <!-- Server Info -->
                                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,8,0">
                                                            <TextBlock Text="{Binding Name}" 
                                                                       FontSize="12" 
                                                                       FontWeight="Medium" 
                                                                       Foreground="#111827"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock FontSize="10" Foreground="#6B7280" Margin="0,1,0,0">
                                                                <Run Text="{Binding ToolsCount, Mode=OneWay}"/>
                                                                <Run Text=" tools"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                        
                                                        <!-- Status Badge -->
                                                        <Border Grid.Column="3" CornerRadius="3" Padding="5,2" VerticalAlignment="Center" Margin="0,0,4,0">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="#F3F4F6"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="running">
                                                                            <Setter Property="Background" Value="#D1FAE5"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="error">
                                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock FontSize="9" FontWeight="Medium">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="#6B7280"/>
                                                                        <Setter Property="Text" Value="{Binding Status}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Status}" Value="running">
                                                                                <Setter Property="Foreground" Value="#059669"/>
                                                                                <Setter Property="Text" Value="Running"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="error">
                                                                                <Setter Property="Foreground" Value="#DC2626"/>
                                                                                <Setter Property="Text" Value="Error"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                        
                                                        <!-- Status Checkmark -->
                                                        <TextBlock Grid.Column="4" 
                                                                   Text="âœ“" 
                                                                   FontSize="14"
                                                                   FontWeight="Bold"
                                                                   VerticalAlignment="Center"
                                                                   Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="#10B981"/>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                    
                                                    <!-- Expanded Tools Section -->
                                                    <Border Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVis}}"
                                                            Margin="32,10,0,0">
                                                        <StackPanel>
                                                            <!-- Connection Info -->
                                                            <TextBlock FontSize="10" Foreground="#9CA3AF" Margin="0,0,0,8">
                                                                <Run Text="Transport: "/>
                                                                <Run Text="{Binding Transport, Mode=OneWay}" Foreground="#6B7280"/>
                                                            </TextBlock>
                                                            
                                                            <!-- Tools Header -->
                                                            <TextBlock Text="Tools" FontSize="10" Foreground="#9CA3AF" 
                                                                       FontWeight="Medium" Margin="0,0,0,6"/>
                                                            
                                                            <!-- Tools List -->
                                                            <ItemsControl ItemsSource="{Binding Tools}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Style="{StaticResource ToolCard}">
                                                                            <StackPanel>
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                    </Grid.ColumnDefinitions>
                                                                                    
                                                                                    <emoji:TextBlock Grid.Column="0" Text="ðŸ”§" FontSize="10" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                                                    <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                                                                               FontSize="11" Foreground="#374151" FontWeight="Medium"
                                                                                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                                                                </Grid>
                                                                                
                                                                                <!-- Tool description -->
                                                                                <TextBlock Text="{Binding Description}" 
                                                                                           FontSize="10" Foreground="#6B7280" 
                                                                                           TextWrapping="Wrap" Margin="16,2,0,0"
                                                                                           Visibility="{Binding Description, Converter={StaticResource BoolToVis}}"/>
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                            
                                                            <!-- No tools message -->
                                                            <TextBlock Text="No tools observed yet" 
                                                                       FontSize="10" Foreground="#9CA3AF" FontStyle="Italic"
                                                                       Visibility="{Binding Tools.Count, Converter={StaticResource ZeroCountToVis}}"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Empty running servers message (session active but 0 servers) -->
                                <Border Background="#FEF3C7" CornerRadius="6" Padding="12" Margin="0,10,0,0"
                                        Visibility="{Binding LiveServers.Count, Converter={StaticResource ZeroCountToVis}}">
                                    <StackPanel Orientation="Horizontal">
                                        <emoji:TextBlock Text="âš ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="No MCP servers running in current session" 
                                                   FontSize="11" 
                                                   Foreground="#92400E" 
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Pending Changes Banner -->
        <Border Grid.Row="3" 
                Background="#FEF3C7" 
                BorderBrush="#F59E0B"
                BorderThickness="0,1,0,0"
                Padding="12,10"
                Visibility="{Binding HasPendingChanges, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <emoji:TextBlock Text="âš ï¸" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Foreground="#92400E" FontSize="12" VerticalAlignment="Center">
                        <Run Text="{Binding PendingChangesCount, Mode=OneWay}" FontWeight="SemiBold"/>
                        <Run Text=" pending change(s) - restart required"/>
                    </TextBlock>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="Discard"
                        Command="{Binding DiscardChangesCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Background="#FDE68A"
                        Foreground="#92400E"
                        Margin="0,0,8,0"/>
                
                <Button Grid.Column="2"
                        Content="Apply"
                        Command="{Binding ApplyChangesCommand}"
                        Style="{StaticResource ActionButton}"
                        Background="#D97706"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>