<UserControl x:Class="CopilotAgent.App.Views.TerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800"
             Background="#0C0C0C"
             Focusable="True">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Terminal Header -->
        <Border Grid.Row="0" 
                Background="#1F1F1F" 
                BorderBrush="#333333" 
                BorderThickness="0,0,0,1"
                Padding="10,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="âš¡" 
                               FontSize="12" 
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="PowerShell" 
                               FontSize="12" 
                               Foreground="#CCCCCC"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <Ellipse Width="8" Height="8" 
                             Margin="8,0,0,0"
                             VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsShellReady}" Value="False">
                                        <Setter Property="Fill" Value="#F44336"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="â†‘â†“ History" 
                               FontSize="10" 
                               Foreground="#666666"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ“‹ Add to Chat" 
                            Command="{Binding AddToMessageCommand}"
                            ToolTip="Add recent terminal output to chat message"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Foreground="#56B6C2"
                            Padding="8,3"
                            Margin="0,0,8,0"
                            FontSize="11"
                            FontWeight="SemiBold"/>
                    <Button Content="â¹" 
                            Command="{Binding SendInterruptCommand}"
                            ToolTip="Send Ctrl+C (Interrupt)"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Foreground="#F44336"
                            Padding="6,3"
                            Margin="0,0,4,0"
                            FontSize="11"/>
                    <Button Content="ðŸ”„" 
                            Command="{Binding RestartShellCommand}"
                            ToolTip="Restart PowerShell"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Foreground="#CCCCCC"
                            Padding="6,3"
                            Margin="0,0,4,0"
                            FontSize="11"/>
                    <Button Content="ðŸ—‘ï¸" 
                            Command="{Binding ClearTerminalCommand}"
                            ToolTip="Clear Terminal"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Foreground="#CCCCCC"
                            Padding="6,3"
                            FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Terminal Output with ANSI Color Support and Color Emojis -->
        <emoji:RichTextBox Grid.Row="1" 
                           x:Name="TerminalRichTextBox"
                           IsReadOnly="True"
                           IsReadOnlyCaretVisible="False"
                           Background="#0C0C0C"
                           Foreground="#CCCCCC"
                           FontFamily="Cascadia Code, Consolas, Courier New"
                           FontSize="12"
                           BorderThickness="0"
                           Padding="8,4"
                           VerticalScrollBarVisibility="Auto"
                           HorizontalScrollBarVisibility="Auto"
                           PreviewMouseLeftButtonDown="TerminalRichTextBox_PreviewMouseLeftButtonDown">
            <emoji:RichTextBox.Resources>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </emoji:RichTextBox.Resources>
        </emoji:RichTextBox>

        <!-- Terminal Input - Integrated Command Line -->
        <Border Grid.Row="2"
                Background="#1A1A1A"
                BorderBrush="#404040"
                BorderThickness="0,1,0,0"
                Padding="8,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding PromptText}"
                           FontFamily="Cascadia Code, Consolas"
                           FontSize="13"
                           Foreground="#56B6C2"
                           FontWeight="SemiBold"
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"/>

                <TextBox Grid.Column="1"
                         x:Name="CommandInput"
                         Text="{Binding CommandInput, UpdateSourceTrigger=PropertyChanged}"
                         FontFamily="Cascadia Code, Consolas, Courier New"
                         FontSize="13"
                         Foreground="#E5E5E5"
                         Background="Transparent"
                         BorderThickness="0"
                         CaretBrush="#FFFFFF"
                         VerticalContentAlignment="Center"
                         Padding="0"
                         AcceptsReturn="False"
                         PreviewKeyDown="CommandInput_PreviewKeyDown">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding ExecuteCommandCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
