<UserControl x:Class="CopilotAgent.App.Views.SkillsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="350"
             Background="{DynamicResource BackgroundBrush}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Skills" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="Enable skills for this session" FontSize="11" Foreground="#888" Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="âŸ³" ToolTip="Refresh"
                            Command="{Binding RefreshSkillsCommand}"
                            Background="Transparent" Foreground="#888"
                            FontSize="14" Padding="6,4"
                            BorderThickness="0" Cursor="Hand"/>
                    <Button Content="ðŸ“‚" ToolTip="Open Skills Folder"
                            Command="{Binding OpenSkillsFolderCommand}"
                            Background="Transparent" Foreground="#888"
                            FontSize="14" Padding="6,4"
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Filter Bar -->
        <Border Grid.Row="1" Background="#252525" Padding="12,8">
            <StackPanel>
                <!-- Search Box -->
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         Background="#333" Foreground="White" BorderBrush="#555"
                         Padding="8,6" FontSize="12">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="ðŸ” Search skills..." Foreground="#666" Margin="8,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <!-- Source Filters -->
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <CheckBox Content="âš™ Built-in" IsChecked="{Binding ShowBuiltIn}"
                              Foreground="#AAA" FontSize="11" Margin="0,0,12,0"/>
                    <CheckBox Content="ðŸ‘¤ Personal" IsChecked="{Binding ShowPersonal}"
                              Foreground="#AAA" FontSize="11" Margin="0,0,12,0"/>
                    <CheckBox Content="ðŸ“ Repo" IsChecked="{Binding ShowRepository}"
                              Foreground="#AAA" FontSize="11"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Skills List -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding Skills}"
                 SelectedItem="{Binding SelectedSkill}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Border" Background="Transparent" 
                                        BorderBrush="#333" BorderThickness="0,0,0,1"
                                        Padding="12,10">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#1A0078D4"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#0D0078D4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Enable Checkbox -->
                        <CheckBox Grid.Column="0" 
                                  IsChecked="{Binding IsEnabled}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  Command="{Binding DataContext.ToggleSkillCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                  CommandParameter="{Binding}"/>
                        
                        <!-- Skill Info -->
                        <StackPanel Grid.Column="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding SourceIcon}" FontSize="12" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Name}" FontWeight="Medium" FontSize="13" Foreground="White"/>
                            </StackPanel>
                            <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#888" 
                                       Margin="0,2,0,0" TextTrimming="CharacterEllipsis" MaxWidth="250"
                                       Visibility="{Binding Description, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                        
                        <!-- Source Badge -->
                        <Border Grid.Column="2" CornerRadius="3" Padding="6,2" 
                                VerticalAlignment="Center" Margin="8,0,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#333"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Source}" Value="BuiltIn">
                                            <Setter Property="Background" Value="#1B5E20"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Source}" Value="Personal">
                                            <Setter Property="Background" Value="#1565C0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Source}" Value="Repository">
                                            <Setter Property="Background" Value="#6A1B9A"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding SourceDisplay}" FontSize="10" Foreground="White"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Empty State -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding Skills.Count, Converter={StaticResource BoolToVis}, ConverterParameter=Zero}">
            <TextBlock Text="No skills found" FontSize="14" Foreground="#666" HorizontalAlignment="Center"/>
            <TextBlock Text="Add SKILL.md files to your personal folder" FontSize="11" Foreground="#555" 
                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
            <Button Content="Open Skills Folder" 
                    Command="{Binding OpenSkillsFolderCommand}"
                    Background="#0078D4" Foreground="White"
                    Padding="12,6" Margin="0,12,0,0"
                    BorderThickness="0" Cursor="Hand" HorizontalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        
        <!-- Selected Skill Actions -->
        <Border Grid.Row="3" Background="#2D2D2D" Padding="12,8"
                Visibility="{Binding SelectedSkill, Converter={StaticResource BoolToVis}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ðŸ‘ View Content" 
                        Command="{Binding ViewSkillContentCommand}"
                        Background="#555" Foreground="White"
                        Padding="10,5" Margin="0,0,8,0"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Content="{Binding SelectedSkill.IsEnabled, Converter={StaticResource BoolToVis}, ConverterParameter=Toggle}"
                        Command="{Binding ToggleSkillCommand}"
                        CommandParameter="{Binding SelectedSkill}"
                        Padding="10,5"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4CAF50"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Content" Value="âœ“ Enable"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSkill.IsEnabled}" Value="True">
                                    <Setter Property="Background" Value="#F44336"/>
                                    <Setter Property="Content" Value="âœ— Disable"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>