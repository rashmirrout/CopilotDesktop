<Window x:Class="CopilotAgent.App.Views.ToolApprovalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CopilotAgent.App.ViewModels"
        mc:Ignorable="d"
        Title="Tool Approval Required"
        Width="550"
        Height="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        d:DataContext="{d:DesignInstance Type=vm:ToolApprovalDialogViewModel}">
    
    <Window.Resources>
        <!-- Approval Button Style -->
        <Style x:Key="ApprovalButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Deny Button Style -->
        <Style x:Key="DenyButtonStyle" TargetType="Button" BasedOn="{StaticResource ApprovalButtonStyle}">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEEEEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#263238" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Tool Icon -->
                <Border Grid.Column="0" 
                        Background="#37474F" 
                        CornerRadius="8" 
                        Padding="12"
                        VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”§" FontSize="24"/>
                </Border>
                
                <!-- Tool Name and Description -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Tool Approval Required" 
                               FontSize="11" 
                               Foreground="#90A4AE"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding ToolName}" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="White"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                
                <!-- Risk Level Badge -->
                <Border Grid.Column="2" 
                        Background="{Binding RiskColor}"
                        CornerRadius="4"
                        Padding="10,6"
                        VerticalAlignment="Center">
                    <TextBlock Text="{Binding RiskLevelDisplay}" 
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20,16">
            <StackPanel>
                <!-- Description -->
                <TextBlock Text="{Binding Description}" 
                           FontSize="13"
                           Foreground="#616161"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"/>
                
                <!-- Arguments Section -->
                <TextBlock Text="ARGUMENTS" 
                           FontSize="10" 
                           FontWeight="Bold"
                           Foreground="#9E9E9E"
                           Margin="0,0,0,8"/>
                <Border Background="#ECEFF1" 
                        CornerRadius="4" 
                        Padding="12"
                        Margin="0,0,0,16">
                    <ScrollViewer MaxHeight="150" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding ToolArgsDisplay}" 
                                   FontFamily="Consolas, Courier New"
                                   FontSize="12"
                                   Foreground="#37474F"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>
                
                <!-- Working Directory -->
                <TextBlock Text="WORKING DIRECTORY" 
                           FontSize="10" 
                           FontWeight="Bold"
                           Foreground="#9E9E9E"
                           Margin="0,0,0,8"/>
                <Border Background="#ECEFF1" 
                        CornerRadius="4" 
                        Padding="12"
                        Margin="0,0,0,16">
                    <TextBlock Text="{Binding WorkingDirectory}" 
                               FontFamily="Consolas, Courier New"
                               FontSize="12"
                               Foreground="#37474F"
                               TextTrimming="CharacterEllipsis"/>
                </Border>
                
                <!-- Timestamp -->
                <TextBlock FontSize="11" Foreground="#9E9E9E">
                    <Run Text="Requested at: "/>
                    <Run Text="{Binding Timestamp, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Remember Checkbox -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20,12">
            <CheckBox IsChecked="{Binding RememberDecision}"
                      Content="Don't ask again for this tool"
                      FontSize="12"
                      Foreground="#616161"/>
        </Border>
        
        <!-- Action Buttons -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Deny/Cancel Buttons -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button Content="Deny"
                            Command="{Binding DenyCommand}"
                            Style="{StaticResource DenyButtonStyle}"
                            ToolTip="Deny this tool execution"/>
                </StackPanel>
                
                <!-- Approve Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Allow Once"
                            Command="{Binding ApproveOnceCommand}"
                            Background="#81C784"
                            Foreground="White"
                            Style="{StaticResource ApprovalButtonStyle}"
                            ToolTip="Allow this specific execution only"/>
                    <Button Content="Allow for Session"
                            Command="{Binding ApproveSessionCommand}"
                            Background="#4CAF50"
                            Foreground="White"
                            Style="{StaticResource ApprovalButtonStyle}"
                            ToolTip="Allow this tool for the current session"/>
                    <Button Content="Always Allow"
                            Command="{Binding ApproveAlwaysCommand}"
                            Background="#2E7D32"
                            Foreground="White"
                            Style="{StaticResource ApprovalButtonStyle}"
                            ToolTip="Always allow this tool globally"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>