<UserControl x:Class="CopilotAgent.App.Views.IterativeTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CopilotAgent.App.ViewModels"
             xmlns:converters="clr-namespace:CopilotAgent.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:IterativeTaskViewModel}"
             Background="White">
    
    <UserControl.Resources>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
    </UserControl.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#E3F2FD" 
                CornerRadius="8" 
                Padding="16"
                Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="ðŸ”„ Iterative Agent Mode" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="#1976D2"/>
                <TextBlock Text="Define a task with success criteria, and the agent will iterate until complete."
                           FontSize="12"
                           Foreground="#424242"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Task Configuration -->
        <Border Grid.Row="1" 
                Background="#FAFAFA" 
                CornerRadius="8" 
                Padding="16"
                Margin="0,0,0,16"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Task Description -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Task Description:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Top"
                           Margin="0,8,12,0"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding TaskDescription, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="60"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,12"
                         Padding="8"/>

                <!-- Success Criteria -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Success Criteria:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Top"
                           Margin="0,8,12,0"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding SuccessCriteria, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="60"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,12"
                         Padding="8"/>

                <!-- Max Iterations -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Max Iterations:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <StackPanel Grid.Row="2" Grid.Column="1" 
                            Orientation="Horizontal"
                            Margin="0,0,0,12">
                    <Slider Value="{Binding MaxIterations}"
                            Minimum="1"
                            Maximum="50"
                            Width="200"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding MaxIterations}"
                               FontWeight="SemiBold"
                               Width="30"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="3" Grid.Column="1"
                            Orientation="Horizontal">
                    <Button Content="â–¶ Start Task"
                            Command="{Binding StartTaskCommand}"
                            IsEnabled="{Binding CanStart}"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="â¹ Stop"
                            Command="{Binding StopTaskCommand}"
                            IsEnabled="{Binding CanStop}"
                            Background="#D32F2F"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#B71C1C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸ—‘ Clear"
                            Command="{Binding ClearTaskCommand}"
                            IsEnabled="{Binding CanClear}"
                            Background="#757575"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="16,8"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#616161"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status and Progress -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                CornerRadius="8" 
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Status" 
                               FontSize="11" 
                               Foreground="#757575"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{Binding StatusColor}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            VerticalAlignment="Center"
                            Width="150">
                    <TextBlock Text="{Binding ProgressPercent, StringFormat='{}{0}%'}"
                               FontSize="12"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,4"/>
                    <ProgressBar Value="{Binding ProgressPercent}"
                                 Height="8"
                                 Background="#E0E0E0"
                                 Foreground="#1976D2"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Iteration History -->
        <Border Grid.Row="3" 
                Background="#FAFAFA" 
                CornerRadius="8" 
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#EEEEEE" 
                        Padding="12,8">
                    <TextBlock Text="ðŸ“‹ Iteration History" 
                               FontWeight="SemiBold"
                               Foreground="#424242"/>
                </Border>

                <ListView Grid.Row="1"
                          ItemsSource="{Binding Iterations}"
                          BorderThickness="0"
                          Background="Transparent"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="8,4"
                                    Padding="12"
                                    CornerRadius="6"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                            Width="32"
                                            Height="32"
                                            CornerRadius="16"
                                            Background="#1976D2"
                                            Margin="0,0,12,0">
                                        <TextBlock Text="{Binding IterationNumber}"
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Action}"
                                                   FontWeight="SemiBold"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Result}"
                                                   Foreground="#616161"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding Evaluation}"
                                                   Foreground="#757575"
                                                   FontSize="11"
                                                   FontStyle="Italic"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" 
                                                VerticalAlignment="Top"
                                                Margin="12,0,0,0">
                                        <TextBlock Text="{Binding DurationMs, StringFormat='{}{0}ms'}"
                                                   FontSize="11"
                                                   Foreground="#757575"/>
                                        <TextBlock FontSize="16" 
                                                   HorizontalAlignment="Center"
                                                   Margin="0,4,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="â³"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                                            <Setter Property="Text" Value="âœ…"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding HasTask, Converter={StaticResource InverseBoolToVisibility}}">
                    <TextBlock Text="ðŸš€" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="No iterations yet"
                               FontSize="14"
                               Foreground="#757575"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                    <TextBlock Text="Configure a task and click Start to begin"
                               FontSize="12"
                               Foreground="#9E9E9E"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>