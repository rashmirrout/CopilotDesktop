<UserControl x:Class="CopilotAgent.App.Views.IterativeTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CopilotAgent.App.ViewModels"
             xmlns:converters="clr-namespace:CopilotAgent.App.Converters"
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:IterativeTaskViewModel}"
             Background="White">
    
    <UserControl.Resources>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>
        
        <!-- Status color brush -->
        <SolidColorBrush x:Key="CompletedBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="FailedBrush" Color="#F44336"/>
        <SolidColorBrush x:Key="RunningBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="CancelledBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="PendingBrush" Color="#9E9E9E"/>
    </UserControl.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#E3F2FD" 
                CornerRadius="8" 
                Padding="16"
                Margin="0,0,0,16">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <emoji:TextBlock Text="ðŸ”„" FontSize="18" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="Iterative Agent Mode" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                </StackPanel>
                <TextBlock Text="Define a task with success criteria, and the agent will iterate until complete. Click on iterations to view detailed tool execution history."
                           FontSize="12"
                           Foreground="#424242"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Task Configuration -->
        <Border Grid.Row="1" 
                Background="#FAFAFA" 
                CornerRadius="8" 
                Padding="16"
                Margin="0,0,0,16"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Task Description -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Task Description:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Top"
                           Margin="0,8,12,0"/>
                <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                    <TextBox x:Name="TaskDescriptionInput"
                             Text="{Binding TaskDescription, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"
                             VerticalScrollBarVisibility="Auto"
                             Padding="8"
                             IsEnabled="{Binding IsIdle}"/>
                    <TextBlock Text="Describe what the agent should accomplish.."
                               FontSize="12" Foreground="#9E9E9E" FontStyle="Italic"
                               IsHitTestVisible="False" Padding="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=TaskDescriptionInput}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Success Criteria -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Success Criteria:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Top"
                           Margin="0,8,12,0"/>
                <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                    <TextBox x:Name="SuccessCriteriaInput"
                             Text="{Binding SuccessCriteria, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"
                             VerticalScrollBarVisibility="Auto"
                             Padding="8"
                             IsEnabled="{Binding IsIdle}"/>
                    <TextBlock Text="Define how to determine task completion.."
                               FontSize="12" Foreground="#9E9E9E" FontStyle="Italic"
                               IsHitTestVisible="False" Padding="10,10,0,0"
                               VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SuccessCriteriaInput}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Max Iterations -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Max Iterations:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <StackPanel Grid.Row="2" Grid.Column="1" 
                            Orientation="Horizontal"
                            Margin="0,0,0,12">
                    <Slider Value="{Binding MaxIterations}"
                            Minimum="1"
                            Maximum="50"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding IsIdle}"/>
                    <TextBlock Text="{Binding MaxIterations}"
                               FontWeight="SemiBold"
                               Width="30"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>

                <!-- Action Buttons with proper enabled/disabled states -->
                <StackPanel Grid.Row="3" Grid.Column="1"
                            Orientation="Horizontal">
                    <!-- Start Button -->
                    <Button Content="â–¶ Start"
                            Command="{Binding StartTaskCommand}"
                            IsEnabled="{Binding CanStart}"
                            Width="100"
                            Margin="0,0,8,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="Foreground" Value="#9E9E9E"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Stop Button -->
                    <Button Content="â¹ Stop"
                            Command="{Binding StopTaskCommand}"
                            IsEnabled="{Binding CanStop}"
                            Width="100"
                            Margin="0,0,8,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#D32F2F"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="Foreground" Value="#9E9E9E"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#B71C1C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Clear Button -->
                    <Button Content="ðŸ—‘ Clear"
                            Command="{Binding ClearTaskCommand}"
                            IsEnabled="{Binding CanClear}"
                            Width="100"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#757575"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="Foreground" Value="#9E9E9E"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#616161"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status and Progress -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                CornerRadius="8" 
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Status" 
                               FontSize="11" 
                               Foreground="#757575"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{Binding StatusColor}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0"
                            VerticalAlignment="Center"
                            Width="150">
                    <TextBlock Text="{Binding ProgressPercent, StringFormat='{}{0}%'}"
                               FontSize="12"
                               HorizontalAlignment="Right"
                               Margin="0,0,0,4"/>
                    <ProgressBar Value="{Binding ProgressPercent}"
                                 Height="8"
                                 Background="#E0E0E0"
                                 Foreground="#1976D2"/>
                </StackPanel>
                
                <!-- Current tool indicator (visible only when running) -->
                <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                           Text="{Binding CurrentToolText}"
                           FontSize="12"
                           Foreground="#1976D2"
                           FontStyle="Italic"
                           Margin="0,8,0,0"
                           Visibility="{Binding ShowProgress, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>
        </Border>

        <!-- Iteration History with Drill-Down -->
        <Border Grid.Row="3" 
                Background="#FAFAFA" 
                CornerRadius="8" 
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#EEEEEE" 
                        Padding="12,8">
                    <StackPanel Orientation="Horizontal">
                        <emoji:TextBlock Text="ðŸ“‹" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Iteration History" 
                                   FontWeight="SemiBold"
                                   Foreground="#424242"/>
                        <TextBlock Text="{Binding Iterations.Count, StringFormat=' ({0} iterations)'}"
                                   Foreground="#757575"
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Iteration List with Expanders -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              PreviewMouseWheel="IterationScrollViewer_PreviewMouseWheel">
                    <ItemsControl ItemsSource="{Binding Iterations}"
                                  Margin="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander Margin="0,4,0,4">
                                    <!-- Iteration Header -->
                                    <Expander.Header>
                                        <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=Expander}, Path=ActualWidth}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Iteration Number Badge -->
                                            <Border Grid.Column="0"
                                                    Width="28"
                                                    Height="28"
                                                    CornerRadius="14"
                                                    Margin="0,0,10,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#1976D2"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                <Setter Property="Background" Value="#F44336"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                <Setter Property="Background" Value="#FF9800"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Running">
                                                                <Setter Property="Background" Value="#2196F3"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding IterationNumber}"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           FontSize="11"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Summary -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Summary}"
                                                       FontWeight="Medium"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,10,0"/>
                                            
                                            <!-- Duration -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding DurationMs, StringFormat='{}{0}ms'}"
                                                       FontSize="11"
                                                       Foreground="#757575"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"/>
                                            
                                            <!-- Status Icon -->
                                            <TextBlock Grid.Column="3" 
                                                       FontSize="14"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="â³"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                <Setter Property="Text" Value="âœ…"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                <Setter Property="Text" Value="âŒ"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                <Setter Property="Text" Value="â¸"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Running">
                                                                <Setter Property="Text" Value="ðŸ”„"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Expander.Header>
                                    
                                    <!-- Iteration Details (Expanded Content) -->
                                    <Border Background="White" 
                                            Padding="16" 
                                            Margin="38,0,0,0"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1,0,1,1"
                                            CornerRadius="0,0,6,6">
                                        <StackPanel>
                                            <!-- Agent Reasoning Section -->
                                            <StackPanel Visibility="{Binding HasReasoning, Converter={StaticResource BoolToVisibility}}"
                                                        Margin="0,0,0,12">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                    <emoji:TextBlock Text="ðŸ¤”" FontSize="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                                    <TextBlock Text="Agent Reasoning" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="12"
                                                               Foreground="#424242"/>
                                                </StackPanel>
                                                <ItemsControl ItemsSource="{Binding AgentReasoning}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#FFF8E1" 
                                                                    Padding="10" 
                                                                    Margin="0,0,0,4"
                                                                    CornerRadius="4">
                                                                <TextBlock Text="{Binding Content}"
                                                                           TextWrapping="Wrap"
                                                                           FontStyle="Italic"
                                                                           FontSize="12"
                                                                           Foreground="#5D4037"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                            
                                            <!-- Tool Executions Section -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                <emoji:TextBlock Text="ðŸ”§" FontSize="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                                <TextBlock Text="Tool Executions" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12"
                                                           Foreground="#424242"/>
                                            </StackPanel>
                                            
                                            <!-- No tools message -->
                                            <TextBlock Text="No tools executed in this iteration"
                                                       FontStyle="Italic"
                                                       Foreground="#9E9E9E"
                                                       FontSize="12"
                                                       Margin="0,0,0,8">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ToolExecutions.Count}" Value="0">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            
                                            <!-- Tool execution list -->
                                            <ItemsControl ItemsSource="{Binding ToolExecutions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Expander Margin="0,0,0,6">
                                                            <Expander.Header>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0"
                                                                               Text="{Binding ToolDisplayHeader}"
                                                                               FontSize="12"/>
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding DurationText}"
                                                                               FontSize="10"
                                                                               Foreground="#757575"
                                                                               Margin="10,0,0,0"/>
                                                                </Grid>
                                                            </Expander.Header>
                                                            
                                                            <!-- Tool Details -->
                                                            <Border Background="#FAFAFA" 
                                                                    Padding="12" 
                                                                    Margin="20,4,0,0"
                                                                    CornerRadius="4"
                                                                    BorderBrush="#E0E0E0"
                                                                    BorderThickness="1">
                                                                <StackPanel>
                                                                    <!-- Arguments -->
                                                                    <TextBlock Text="Arguments:" 
                                                                               FontWeight="SemiBold" 
                                                                               FontSize="11"
                                                                               Foreground="#616161"/>
                                                                    <TextBlock Text="{Binding ArgumentsSummary}"
                                                                               TextWrapping="Wrap"
                                                                               FontSize="11"
                                                                               Foreground="#424242"
                                                                               Margin="0,2,0,8"/>
                                                                    
                                                                    <!-- Result -->
                                                                    <TextBlock Text="Result:" 
                                                                               FontWeight="SemiBold" 
                                                                               FontSize="11"
                                                                               Foreground="#616161"/>
                                                                    <TextBox Text="{Binding Result, Mode=OneWay}"
                                                                             IsReadOnly="True"
                                                                             TextWrapping="Wrap"
                                                                             FontSize="11"
                                                                             MaxHeight="150"
                                                                             VerticalScrollBarVisibility="Auto"
                                                                             Background="Transparent"
                                                                             BorderThickness="0"
                                                                             Margin="0,2,0,0"/>
                                                                    
                                                                    <!-- Error (if any) -->
                                                                    <StackPanel Visibility="{Binding Error, Converter={StaticResource StringToVisibility}}">
                                                                        <TextBlock Text="Error:" 
                                                                                   FontWeight="SemiBold" 
                                                                                   FontSize="11"
                                                                                   Foreground="#D32F2F"
                                                                                   Margin="0,8,0,0"/>
                                                                        <TextBlock Text="{Binding Error}"
                                                                                   TextWrapping="Wrap"
                                                                                   FontSize="11"
                                                                                   Foreground="#D32F2F"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Border>
                                                        </Expander>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                            <!-- Evaluation -->
                                            <Border Background="#E8F5E9" 
                                                    Padding="10" 
                                                    CornerRadius="4"
                                                    Margin="0,12,0,0">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                        <emoji:TextBlock Text="ðŸ“Š" FontSize="11" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                                        <TextBlock Text="Evaluation" 
                                                                   FontWeight="SemiBold" 
                                                                   FontSize="11"
                                                                   Foreground="#2E7D32"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Evaluation}"
                                                               TextWrapping="Wrap"
                                                               FontSize="12"
                                                               Foreground="#424242"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding HasHistory, Converter={StaticResource InverseBoolToVisibility}}">
                    <emoji:TextBlock Text="ðŸš€" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="No iterations yet"
                               FontSize="14"
                               Foreground="#757575"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                    <TextBlock Text="Configure a task and click Start to begin"
                               FontSize="12"
                               Foreground="#9E9E9E"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>