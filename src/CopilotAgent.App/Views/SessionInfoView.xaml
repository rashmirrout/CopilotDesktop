<UserControl x:Class="CopilotAgent.App.Views.SessionInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CopilotAgent.App.ViewModels"
             xmlns:converters="clr-namespace:CopilotAgent.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=vm:SessionInfoViewModel}"
             Loaded="UserControl_Loaded">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <!-- Info Row Style -->
        <Style x:Key="InfoRowStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Value Style (TextBlock - kept for headers) -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        
        <!-- Selectable Text Style (TextBox that looks like TextBlock but is selectable) -->
        <Style x:Key="SelectableTextStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
        
        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Command Button Style - Fixed height for text visibility -->
        <Style x:Key="CommandButtonStyle" TargetType="Button">
            <Setter Property="MinHeight" Value="56"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F0F2F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="350"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Session Information -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Header with Refresh -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Session Details" FontSize="20" FontWeight="SemiBold" Foreground="#1A1A1A"/>
                    <Button Grid.Column="1" Style="{StaticResource IconButtonStyle}" 
                            Command="{Binding RefreshAllCommand}"
                            ToolTip="Refresh session information"
                            IsEnabled="{Binding IsCommandRunning, Converter={StaticResource InverseBoolToVisibility}}">
                        <TextBlock Text="ðŸ”„" FontSize="14"/>
                    </Button>
                </Grid>

                <!-- Session Info Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Session" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid Style="{StaticResource InfoRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding SessionName, Mode=OneWay}" 
                                     Style="{StaticResource SelectableTextStyle}" FontWeight="SemiBold"/>
                        </Grid>
                        
                        <Grid Style="{StaticResource InfoRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Session ID" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding SessionId, Mode=OneWay}" 
                                     Style="{StaticResource SelectableTextStyle}"
                                     FontFamily="Consolas" FontSize="11" Foreground="#666"/>
                        </Grid>
                        
                        <Grid Style="{StaticResource InfoRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Copilot Session" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding CopilotSessionId, Mode=OneWay}" 
                                     Style="{StaticResource SelectableTextStyle}"
                                     FontFamily="Consolas" FontSize="11"/>
                            <Button Grid.Column="2" Style="{StaticResource IconButtonStyle}" Width="28" Height="28"
                                    Command="{Binding CopyCopilotSessionIdCommand}" ToolTip="Copy to clipboard">
                                <TextBlock Text="ðŸ“‹" FontSize="12"/>
                            </Button>
                        </Grid>
                        
                        <Grid Style="{StaticResource InfoRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Messages" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding MessageCount, Mode=OneWay}" 
                                     Style="{StaticResource SelectableTextStyle}"/>
                        </Grid>
                        
                        <Grid Style="{StaticResource InfoRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Created" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding CreatedAt, Mode=OneWay}" 
                                     Style="{StaticResource SelectableTextStyle}"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Last Active" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding LastActiveAt, Mode=OneWay}" 
                                     Style="{StaticResource SelectableTextStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Model Selection Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ¤– AI Model" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                            <Button Grid.Column="1" Style="{StaticResource IconButtonStyle}" Width="28" Height="28"
                                    Command="{Binding RefreshModelCommand}" ToolTip="Refresh model info"
                                    IsEnabled="{Binding IsCommandRunning, Converter={StaticResource InverseBoolToVisibility}}">
                                <TextBlock Text="ðŸ”„" FontSize="12"/>
                            </Button>
                        </Grid>
                        
                        <Grid Style="{StaticResource InfoRowStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Current" Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Column="1" Text="{Binding CurrentModel, Mode=OneWay}" 
                                     Style="{StaticResource SelectableTextStyle}"
                                     FontWeight="SemiBold" Foreground="#1976D2"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Change to" Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding AvailableModels}" 
                                      SelectedItem="{Binding SelectedModel}"
                                      Padding="10,8" FontSize="12"
                                      IsEnabled="{Binding IsCommandRunning, Converter={StaticResource InverseBoolToVisibility}}"/>
                            <Button Grid.Column="2" Content="Apply" Padding="12,8" Margin="8,0,0,0"
                                    Background="#1976D2" Foreground="White" BorderThickness="0"
                                    Cursor="Hand" Command="{Binding ChangeModelCommand}"
                                    IsEnabled="{Binding IsCommandRunning, Converter={StaticResource InverseBoolToVisibility}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Working Directory Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ“ Working Directory" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                            <Button Grid.Column="1" Style="{StaticResource IconButtonStyle}" Width="28" Height="28"
                                    Command="{Binding OpenInExplorerCommand}" ToolTip="Open in Explorer" Margin="0,0,8,0">
                                <TextBlock Text="ðŸ“‚" FontSize="12"/>
                            </Button>
                            <Button Grid.Column="2" Style="{StaticResource IconButtonStyle}" Width="28" Height="28"
                                    Command="{Binding BrowseDirectoryCommand}" ToolTip="Browse..." Margin="0,0,8,0"
                                    IsEnabled="{Binding IsCommandRunning, Converter={StaticResource InverseBoolToVisibility}}">
                                <TextBlock Text="ðŸ“" FontSize="12"/>
                            </Button>
                            <Button Grid.Column="3" Style="{StaticResource IconButtonStyle}" Width="28" Height="28"
                                    Command="{Binding ChangeDirectoryCommand}" ToolTip="Apply /cwd"
                                    Background="#4CAF50"
                                    IsEnabled="{Binding IsCommandRunning, Converter={StaticResource InverseBoolToVisibility}}">
                                <TextBlock Text="âœ“" FontSize="14" Foreground="White" FontWeight="Bold"/>
                            </Button>
                        </Grid>
                        
                        <Border Background="#F5F7FA" CornerRadius="8" Padding="12">
                            <TextBox Text="{Binding NewDirectoryPath, UpdateSourceTrigger=PropertyChanged}"
                                     FontFamily="Consolas" FontSize="12"
                                     BorderThickness="0" Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     IsEnabled="{Binding IsCommandRunning, Converter={StaticResource InverseBoolToVisibility}}"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Autonomous Mode Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="ðŸš€ Autonomous Mode" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <!-- Current Status -->
                        <Border Background="#F0F4F8" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                            <TextBlock Text="{Binding AutonomousModeStatus}" 
                                       FontSize="13" FontWeight="SemiBold" 
                                       Foreground="#333" TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- YOLO Mode Toggle -->
                        <Button Margin="0,0,0,12" Padding="12,10" Cursor="Hand"
                                Command="{Binding ToggleAllowAllCommand}"
                                HorizontalContentAlignment="Stretch">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                    <Setter Property="BorderBrush" Value="#FFB74D"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Stretch"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AllowAll}" Value="True">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="BorderBrush" Value="#388E3C"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE0B2"/>
                                        </Trigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding AllowAll}" Value="True"/>
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="#66BB6A"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ”¥" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock FontWeight="Bold" FontSize="13">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Enable YOLO Mode"/>
                                                <Setter Property="Foreground" Value="#E65100"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AllowAll}" Value="True">
                                                        <Setter Property="Text" Value="YOLO Mode ACTIVE"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock FontSize="10">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="--allow-all (tools + paths + URLs)"/>
                                                <Setter Property="Foreground" Value="#999"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AllowAll}" Value="True">
                                                        <Setter Property="Foreground" Value="#C8E6C9"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <TextBlock Grid.Column="2" FontSize="16" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="â—‹"/>
                                            <Setter Property="Foreground" Value="#999"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding AllowAll}" Value="True">
                                                    <Setter Property="Text" Value="âœ“"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Button>
                        
                        <!-- Individual Toggles -->
                        <TextBlock Text="Or enable individually:" FontSize="11" Foreground="#666" Margin="0,4,0,8"/>
                        
                        <!-- Allow All Tools -->
                        <Button Margin="0,0,0,8" Padding="10,8" Cursor="Hand"
                                Command="{Binding ToggleAllowAllToolsCommand}"
                                HorizontalContentAlignment="Stretch">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FAFAFA"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Stretch"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AllowAllTools}" Value="True">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                            <Setter Property="BorderBrush" Value="#4CAF50"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ”§" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Allow All Tools" FontWeight="SemiBold" FontSize="12" Foreground="#333"/>
                                    <TextBlock Text="--allow-all-tools" FontSize="9" Foreground="#999"/>
                                </StackPanel>
                                <CheckBox Grid.Column="2" IsChecked="{Binding AllowAllTools, Mode=OneWay}" 
                                          IsHitTestVisible="False" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                        
                        <!-- Allow All Paths -->
                        <Button Margin="0,0,0,8" Padding="10,8" Cursor="Hand"
                                Command="{Binding ToggleAllowAllPathsCommand}"
                                HorizontalContentAlignment="Stretch">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FAFAFA"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Stretch"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AllowAllPaths}" Value="True">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                            <Setter Property="BorderBrush" Value="#4CAF50"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ“‚" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Allow All Paths" FontWeight="SemiBold" FontSize="12" Foreground="#333"/>
                                    <TextBlock Text="--allow-all-paths" FontSize="9" Foreground="#999"/>
                                </StackPanel>
                                <CheckBox Grid.Column="2" IsChecked="{Binding AllowAllPaths, Mode=OneWay}" 
                                          IsHitTestVisible="False" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                        
                        <!-- Allow All URLs -->
                        <Button Padding="10,8" Cursor="Hand"
                                Command="{Binding ToggleAllowAllUrlsCommand}"
                                HorizontalContentAlignment="Stretch">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FAFAFA"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Stretch"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AllowAllUrls}" Value="True">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                            <Setter Property="BorderBrush" Value="#4CAF50"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸŒ" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Allow All URLs" FontWeight="SemiBold" FontSize="12" Foreground="#333"/>
                                    <TextBlock Text="--allow-all-urls" FontSize="9" Foreground="#999"/>
                                </StackPanel>
                                <CheckBox Grid.Column="2" IsChecked="{Binding AllowAllUrls, Mode=OneWay}" 
                                          IsHitTestVisible="False" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Output Card (shown when there's output) -->
                <Border Style="{StaticResource CardStyle}" 
                        Visibility="{Binding CommandOutput, Converter={StaticResource StringToVisibility}}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¬ Command Output" Style="{StaticResource SectionHeaderStyle}"/>
                        <Border Background="#F5F7FA" CornerRadius="8" Padding="12" MaxHeight="200">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox Text="{Binding CommandOutput, Mode=OneWay}" 
                                         Style="{StaticResource SelectableTextStyle}"
                                         FontFamily="Consolas" FontSize="12"
                                         TextWrapping="Wrap" Foreground="#333"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Panel: Commands -->
        <Border Grid.Column="1" Background="White" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="âš¡ Quick Actions" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#1A1A1A" Margin="0,0,0,20"/>
                    
                    <!-- Status Indicator -->
                    <Border Background="#FFF8E1" CornerRadius="8" Padding="12" Margin="0,0,0,16"
                            Visibility="{Binding IsCommandRunning, Converter={StaticResource BoolToVisibility}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="18" Height="18" Margin="0,0,10,0">
                                <Ellipse Width="18" Height="18" Stroke="#FF9800" StrokeThickness="2" StrokeDashArray="2,2">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform CenterX="9" CenterY="9"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
