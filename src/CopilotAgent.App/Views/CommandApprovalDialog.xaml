<Window x:Class="CopilotAgent.App.Views.CommandApprovalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Command Approval Required"
        Width="500"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style x:Key="RiskBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Risk Level -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="⚠️" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <StackPanel>
                <TextBlock Text="Command Approval Required" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="#FFFFFF"/>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="Risk Level: " Foreground="#888888" FontSize="12"/>
                    <Border x:Name="RiskBadge" Style="{StaticResource RiskBadgeStyle}">
                        <TextBlock x:Name="RiskText" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Command Display -->
        <Border Grid.Row="1" 
                Background="#0D0D0D" 
                BorderBrush="#333333" 
                BorderThickness="1" 
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,16">
            <TextBlock x:Name="CommandText"
                       FontFamily="Cascadia Code, Consolas, Courier New"
                       FontSize="13"
                       Foreground="#E5E5E5"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Reason -->
        <TextBlock Grid.Row="2" 
                   x:Name="ReasonText"
                   Foreground="#AAAAAA"
                   FontSize="12"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16"/>

        <!-- Options -->
        <CheckBox Grid.Row="3"
                  x:Name="AddToAllowListCheckBox"
                  Content="Always allow this command in the future"
                  Foreground="#CCCCCC"
                  Margin="0,0,0,20"/>

        <!-- Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    x:Name="DenyButton"
                    Content="Deny"
                    Width="80"
                    Padding="12,8"
                    Margin="0,0,8,0"
                    Background="#FF5252"
                    Foreground="White"
                    BorderThickness="0"
                    Click="DenyButton_Click"/>

            <Button Grid.Column="2"
                    x:Name="AllowOnceButton"
                    Content="Allow Once"
                    Width="100"
                    Padding="12,8"
                    Margin="0,0,8,0"
                    Background="#555555"
                    Foreground="White"
                    BorderThickness="0"
                    Click="AllowOnceButton_Click"/>

            <Button Grid.Column="3"
                    x:Name="AllowButton"
                    Content="Allow"
                    Width="80"
                    Padding="12,8"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Click="AllowButton_Click"/>
        </Grid>

        <!-- Warning for high risk -->
        <Border Grid.Row="5" 
                x:Name="WarningPanel"
                Visibility="Collapsed"
                Background="#3D2E00"
                BorderBrush="#FFA000"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚠️" FontSize="14" Margin="0,0,8,0"/>
                <TextBlock Text="This command has been identified as potentially dangerous. Please review carefully before allowing."
                           Foreground="#FFD54F"
                           FontSize="12"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>