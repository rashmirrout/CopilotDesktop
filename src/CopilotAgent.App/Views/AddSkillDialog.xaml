<Window x:Class="CopilotAgent.App.Views.AddSkillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        mc:Ignorable="d"
        Title="Add New Skill"
        Width="560" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderBrush="#0078D4"
        BorderThickness="1">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Margin="{TemplateBinding Padding}"
                                         VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D4D4D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1084D8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006CBD"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#2D2D2D" Padding="16,12" MouseDown="TitleBar_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <emoji:TextBlock Text="âž•" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Add New Skill" FontSize="16" FontWeight="SemiBold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Grid.Column="2" Content="âœ•" 
                        Click="CloseButton_Click"
                        Background="Transparent" Foreground="#888"
                        FontSize="14" Padding="8,4"
                        BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" 
                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Skill Name -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Skill Name *" FontSize="12" FontWeight="SemiBold" 
                               Foreground="#CCC" Margin="0,0,0,6"/>
                    <TextBox x:Name="SkillNameTextBox"
                             Text="{Binding SkillName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             ToolTip="Technical name for the skill (lowercase, hyphens allowed)"/>
                    <TextBlock Text="e.g., code-reviewer, debugging-expert" 
                               FontSize="11" Foreground="#666" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Display Name -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Display Name" FontSize="12" FontWeight="SemiBold" 
                               Foreground="#CCC" Margin="0,0,0,6"/>
                    <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             ToolTip="Human-friendly name shown in the UI"/>
                    <TextBlock Text="e.g., Code Reviewer, Debugging Expert" 
                               FontSize="11" Foreground="#666" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Description -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold" 
                               Foreground="#CCC" Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             ToolTip="Brief description of what this skill does"/>
                </StackPanel>
                
                <!-- File Selection -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Skill Content *" FontSize="12" FontWeight="SemiBold" 
                               Foreground="#CCC" Margin="0,0,0,6"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                                 Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True"
                                 ToolTip="Path to the skill markdown file"/>
                        <Button Grid.Column="1" Content="Browse..."
                                Click="BrowseButton_Click"
                                Style="{StaticResource ModernButton}"
                                Margin="8,0,0,0"/>
                    </Grid>
                    <TextBlock Text="Select a .md file or paste content below" 
                               FontSize="11" Foreground="#666" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Content Preview/Edit -->
                <StackPanel Margin="0,0,0,16">
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Content Preview" FontSize="12" 
                                   FontWeight="SemiBold" Foreground="#CCC"/>
                        <TextBlock Grid.Column="1" FontSize="11" Foreground="#666">
                            <Run Text="{Binding ContentLength, Mode=OneWay}"/>
                            <Run Text=" characters"/>
                        </TextBlock>
                    </Grid>
                    
                    <Border Background="#252525" BorderBrush="#333" BorderThickness="1" 
                            CornerRadius="4" Padding="1">
                        <TextBox Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 Foreground="#DDD"
                                 BorderThickness="0"
                                 Padding="10"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Height="140"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 VerticalScrollBarVisibility="Auto"
                                 CaretBrush="White"
                                 ToolTip="Skill prompt content in markdown format"/>
                    </Border>
                </StackPanel>
                
                <!-- Validation Messages -->
                <Border Background="#3D2020" BorderBrush="#F44336" BorderThickness="1" 
                        CornerRadius="4" Padding="12,10" Margin="0,0,0,8"
                        Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVis}}">
                    <StackPanel Orientation="Horizontal">
                        <emoji:TextBlock Text="âš ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding ValidationMessage}" 
                                   Foreground="#F44336" FontSize="12" 
                                   TextWrapping="Wrap" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Info Box -->
                <Border Background="#1A365D" BorderBrush="#2563EB" BorderThickness="1" 
                        CornerRadius="4" Padding="12,10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <emoji:TextBlock Text="ðŸ’¡" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Skill will be saved to:" 
                                       Foreground="#93C5FD" FontSize="12" FontWeight="Medium"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TargetPath}" 
                                   Foreground="#60A5FA" FontSize="11" 
                                   TextWrapping="Wrap" FontFamily="Consolas"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D2D" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <CheckBox Grid.Column="0" 
                          Content="Enable skill after creating"
                          IsChecked="{Binding EnableAfterCreate}"
                          Foreground="#AAA" FontSize="12"
                          VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" Content="Cancel"
                        Click="CancelButton_Click"
                        Style="{StaticResource ModernButton}"
                        MinWidth="90" Margin="0,0,10,0"/>
                
                <Button Grid.Column="2" Content="Create Skill"
                        Click="CreateButton_Click"
                        Style="{StaticResource PrimaryButton}"
                        IsEnabled="{Binding CanCreate}"
                        MinWidth="120"/>
            </Grid>
        </Border>
    </Grid>
</Window>