<Window x:Class="CopilotAgent.App.Views.ManageApprovalsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Manage Saved Approvals" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="500"
        ShowInTaskbar="False"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Scope Badge Style -->
        <Style x:Key="ScopeBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Saved Tool Approval Rules"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#212121"/>
                    <TextBlock Text="{Binding RuleCountText}"
                               FontSize="12"
                               Foreground="#757575"
                               Margin="0,4,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox SelectedIndex="{Binding FilterIndex}"
                              Width="150"
                              Margin="0,0,8,0"
                              VerticalAlignment="Center">
                        <ComboBoxItem Content="All Rules"/>
                        <ComboBoxItem Content="Global Only"/>
                        <ComboBoxItem Content="Session Only"/>
                        <ComboBoxItem Content="Approved Only"/>
                        <ComboBoxItem Content="Denied Only"/>
                    </ComboBox>
                    
                    <Button Content="Clear All"
                            Command="{Binding ClearAllCommand}"
                            Background="#D32F2F"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62828"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Rules List -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding FilteredRules}"
                  SelectedItem="{Binding SelectedRule}"
                  Background="White"
                  BorderThickness="0"
                  Margin="16,16,16,8">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tool" Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ToolName}"
                                           FontWeight="SemiBold"
                                           Foreground="#212121"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Decision" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ScopeBadgeStyle}"
                                        Background="{Binding ApprovedBackground}">
                                    <TextBlock Text="{Binding ApprovedText}"
                                               Foreground="{Binding ApprovedForeground}"
                                               FontSize="11"
                                               FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Scope" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ScopeBadgeStyle}"
                                        Background="{Binding ScopeBackground}">
                                    <TextBlock Text="{Binding ScopeText}"
                                               Foreground="{Binding ScopeForeground}"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Created" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CreatedAtText}"
                                           Foreground="#757575"
                                           FontSize="12"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Remove"
                                        Command="{Binding DataContext.RemoveRuleCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        Foreground="#D32F2F"
                                        BorderThickness="0"
                                        Padding="8,4"
                                        FontSize="12"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            
            <!-- Empty State -->
            <ListView.Style>
                <Style TargetType="ListView">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding FilteredRules.Count}" Value="0">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Border Background="White">
                                            <StackPanel HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="ðŸ“‹"
                                                           FontSize="48"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,12"/>
                                                <TextBlock Text="No approval rules found"
                                                           FontSize="14"
                                                           Foreground="#757575"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding EmptyStateHint}"
                                                           FontSize="12"
                                                           Foreground="#9E9E9E"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Style>
        </ListView>
        
        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="ðŸ’¡ Global rules apply to all sessions. Session rules are cleared when the session ends."
                           FontSize="11"
                           Foreground="#757575"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
                
                <Button Grid.Column="1"
                        Content="Close"
                        IsCancel="True"
                        Click="CloseButton_Click"
                        Background="#1976D2"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,8"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1565C0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>